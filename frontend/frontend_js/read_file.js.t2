;; variables
var readfile_cb = {};

;; functions
function readfile(filename, cb)
{
  const ws_msg = {
    cmd: 'fileRead',
    path: filename
  };

  readfile_cb[filename] = (content) => {
    cb(content);
  };

  socket.send(JSON.stringify(ws_msg));
}

